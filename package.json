{
  "name": "cench-ai-desktop",
  "version": "1.0.0",
  "description": "AI-powered DaVinci Resolve assistant",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite --port 3000",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "vite build",
    "build:electron": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron": "^25.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6",
    "node-fetch": "^3.3.1",
    "child_process": "^1.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.4.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.cenchai.desktop",
    "productName": "Cench AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist/**/*",
      "src/database/**/*",
      "src/python-scripts/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "icon": "assets/icons/icon.png"
    }
  }
} 